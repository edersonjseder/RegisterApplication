<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ccebff">

        <!-- Action bar displayed at the top -->
        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvIdEmployee"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Name -->
        <TextView
            android:id="@+id/tvNameEmployee"
            android:textSize="19dp"
            android:text="@string/name_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txNameEmployee"
            android:enabled="false" />

        <!-- Role -->
        <TextView
            android:id="@+id/tvRoleEmployee"
            android:textSize="19dp"
            android:text="@string/role_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txRoleEmployee"
            android:enabled="false" />

        <!-- CPF -->
        <TextView
            android:id="@+id/tvCpfEmployee"
            android:textSize="19dp"
            android:text="@string/cpf_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txCpfEmployee"
            android:enabled="false" />

        <!-- RG -->
        <TextView
            android:id="@+id/tvRgEmployee"
            android:textSize="19dp"
            android:text="@string/rg_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txRgEmployee"
            android:enabled="false" />

        <!-- Gender -->
        <TextView
            android:id="@+id/tvGenderEmployee"
            android:textSize="19dp"
            android:text="@string/gender_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:id="@+id/rgGenderEmployee"
            android:weightSum="1">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender_employee_male"
                android:id="@+id/rbGenderEmployeeM"
                android:enabled="false"
                android:checked="true"
                android:layout_weight="0.50" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender_employee_female"
                android:id="@+id/rbGenderEmployeeF"
                android:enabled="false"
                android:checked="false"
                android:layout_weight="0.50" />
        </RadioGroup>

        <!-- Birth Date -->
        <TextView
            android:id="@+id/tvDateBirthEmployee"
            android:textSize="19dp"
            android:text="@string/birth_date_employee"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:enabled="false"
                    android:ems="10"
                    android:id="@+id/txBirthDateEmployee"/>

                <ImageButton
                    android:id="@+id/ibCalendarBirthDateDetails"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:cropToPadding="true"
                    android:src="@drawable/ic_calendar_32" />
            </TableRow>

        </TableLayout>

        <!-- Phone Number -->
        <TextView
            android:id="@+id/tvPhoneEmployee"
            android:textSize="19dp"
            android:text="@string/phone_employee"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/txPhoneEmployee"
            android:enabled="false"/>

        <!-- E-Mail -->
        <TextView
            android:id="@+id/tvEmailEmployee"
            android:textSize="19dp"
            android:text="@string/email_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txEmailEmployee"
            android:enabled="false"/>

        <!-- Salary -->
        <TextView
            android:id="@+id/tvSalaryEmployee"
            android:textSize="19dp"
            android:text="@string/salary_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txSalaryEmployee"
            android:enabled="false"/>

        <!-- Admission date -->
        <TextView
            android:id="@+id/tvDateAdmissionEmployee"
            android:textSize="19dp"
            android:text="@string/admission_date_employee"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:enabled="false"
                    android:ems="10"
                    android:id="@+id/txAdmissionDateEmployee"/>

                <ImageButton
                    android:id="@+id/ibCalendarAdmissionDateDetails"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:cropToPadding="true"
                    android:src="@drawable/ic_calendar_32" />
            </TableRow>
        </TableLayout>

        <!-- Dismissal date -->
        <TextView
            android:id="@+id/tvDateDismissalEmployee"
            android:textSize="19dp"
            android:text="@string/dismissal_date_employee"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <EditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:enabled="false"
                    android:ems="10"
                    android:id="@+id/txDismissalDateEmployee"/>

                <ImageButton
                    android:id="@+id/ibCalendarDismissalDateDetails"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:cropToPadding="true"
                    android:src="@drawable/ic_calendar_32" />
            </TableRow>
        </TableLayout>

        <!-- Status -->
        <TextView
            android:id="@+id/tvStatusEmployee"
            android:textSize="19dp"
            android:text="@string/status_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txStatusEmployee"
            android:enabled="false" />

        <!-- Buttons -->
        <RelativeLayout
            android:id="@+id/relativeLayoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/button_employee_edit"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
            <Button
                android:id="@+id/btUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/button_employee_update"
                android:visibility="invisible"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/btDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="left"
                android:visibility="invisible"
                android:text="@string/button_employee_delete" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>


